{{#each posts as |post|}}
<div class="card">
    <div class="card-header">
        <span class="d-flex justify-content-between">
            <span>{{post.title}}</span>
            <span>{{format_time post.createdAt}}--{{format_date post.createdAt}}</span>
        </span>
    </div>
    <div class="card-body">
        <blockquote class="blockquote mb-0">
            <p>{{post.body}}</p>
        </blockquote>
    </div>
    <div class="card-body">
        <p class="blockquote mb-0">
            {{#each post.notes as |note|}}
        <p>{{note.body}}</p>
        <p>{{note.user_id}}</p>
        {{/each}}
        </blockquote>
    </div>
</div>
{{!-- {{#if logged_in}} --}}
<div data-post="{{post.id}}" class="form-floating mt-1 form-comment" style="margin-bottom: 50px;">
    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea">
    </textarea>
    <button class="mt-1">Comment</button>
</div>
{{!-- {{else}}
<div class="form-floating mt-1" style="margin-bottom: 50px;">
    <a href="/login"><button>Login to leave comment</button></a>
</div>
{{/if}} --}}

{{/each}}

<script src="/js/post-note.js"></script>